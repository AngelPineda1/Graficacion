<Window x:Class="Graficacion.Trebol"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graficacion"
        mc:Ignorable="d"
        Title="Trebol" Height="450" Width="800">
    <Canvas>
        <Canvas.Background>
            <VisualBrush Viewport="0,0 0.5 0.5" TileMode="FlipXY" Stretch="Fill">
                <VisualBrush.Visual>
                    <Path Data="M50,200 150,200 130,140 L130,140 A50,50 1 1 0 140,60 L140,60 A50,50 1 1 0  60,60 L60,60 A50,50 1 1 0 70,140 Z" Stroke="Black" Fill="Black" Canvas.Top="100" Canvas.Left="100"
                          ></Path>
                </VisualBrush.Visual>
            </VisualBrush>
        </Canvas.Background>
    </Canvas>
</Window>
