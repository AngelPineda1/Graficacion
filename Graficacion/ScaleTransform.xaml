<Window x:Class="Graficacion.ScaleTransform"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graficacion"
        mc:Ignorable="d"
        Title="ScaleTransform" Height="450" Width="800">
    <UniformGrid Columns="2" Rows="2">
        <Rectangle Width="100" Height="50" Fill="SaddleBrown">
            <Rectangle.RenderTransform>
                <ScaleTransform ScaleX="2" ScaleY="2"></ScaleTransform>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Button>
            <Button.RenderTransform>
                <ScaleTransform ScaleX=".25" ScaleY=".25"></ScaleTransform>
            </Button.RenderTransform>
        </Button>
        <Button>
            <Button.RenderTransform>
                <ScaleTransform ScaleX="-1" ScaleY="-1"></ScaleTransform>
            </Button.RenderTransform>
        </Button>
    </UniformGrid>
</Window>
