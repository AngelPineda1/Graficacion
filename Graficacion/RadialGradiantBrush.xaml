<Window x:Class="Graficacion.RadialGradiantBrush"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graficacion"
        mc:Ignorable="d"
        Title="RadialGradiantBrush" Height="450" Width="800">
    <Canvas>
        <Rectangle Width="200" Height="200">
            <Rectangle.Fill>
                <RadialGradientBrush Center="0.5,0.5"
                                     RadiusX="0.5"
                                     RadiusY="0.5"
                                     GradientOrigin="0.3,0.3"
                                     >
                    <GradientStop Color="White" Offset="0"></GradientStop>
                    <GradientStop Color="Black" Offset="0.5"></GradientStop>
                    <GradientStop Color="Blue" Offset="0.4"></GradientStop>
                    <GradientStop Color="Gray" Offset="1"></GradientStop>
                </RadialGradientBrush>
                
            </Rectangle.Fill>
        </Rectangle>
    </Canvas>
</Window>
